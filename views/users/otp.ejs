<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }

  .otp-container {
    max-width: 450px;
    background-color: #fff;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    text-align: center;
    width: 100%;
  }

  h2 {
    color: #007bff;
    font-size: 28px;
    margin-bottom: 20px;
  }

  p {
    color: #555;
    font-size: 16px;
  }

  .otp-input {
    width: 60px;
    height: 60px;
    font-size: 24px;
    text-align: center;
    margin: 10px 8px;
    border: 1px solid #ddd;
    border-radius: 8px;
    outline: none;
    transition: border-color 0.3s ease;
  }

  .otp-input:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }

  .submit-btn {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 12px 30px;
    font-size: 18px;
    border-radius: 5px;
    cursor: pointer;
    width: 100%;
    margin-top: 20px;
    transition: background-color 0.3s ease;
  }

  .submit-btn:hover {
    background-color: #0056b3;
  }

  button.resend-btn {
    background-color: #28a745;
    color: #fff;
    border: none;
    padding: 10px 20px;
    font-size: 14px;
    border-radius: 5px;
    cursor: pointer;
    margin-top: 15px;
  }

  button.resend-btn:hover {
    background-color: #218838;
  }

  #timer {
    font-size: 16px;
    color: red;
    margin-top: 15px;
  }

  #sendingMessage {
    font-size: 16px;
    color: red;
    margin-top: 10px;
  }

  a {
    text-decoration: none;
    color: #007bff;
    font-size: 14px;
    margin-top: 10px;
    display: inline-block;
  }

  a:hover {
    text-decoration: underline;
  }
</style>

<div class="otp-container">
  <h2>OTP Verification</h2>
  <div style="height: 20px;">
    <h4 id="sendingMessage"></h4>
  </div>
  <p>Enter the OTP sent to your email</p>
  <form id="otp-form" method="post" action="">
    <input class="otp-input" type="text" maxlength="1" id="num1" required>
    <input class="otp-input" type="text" maxlength="1" id="num2" required>
    <input class="otp-input" type="text" maxlength="1" id="num3" required>
    <input class="otp-input" type="text" maxlength="1" id="num4" required>
    <br><br>
    <button type="submit" class="submit-btn">Submit</button>  
  </form>
  <button class="resend-btn" onclick="resendClick()">Resend OTP</button>
  <a href="/">Login</a>
  <p id="timer">Time is running: 60</p>
</div>


<script>
  var timeleft = 60;
  var timer = setInterval(function(){
    if(timeleft <= 0){
      clearInterval(timer);
      let a = document.getElementById("timer").innerHTML = "0";
      if(a <= "0"){
        let a = document.getElementById("timer").innerHTML = "Time is over";
        let x = setInterval(() => {
          let a = document.getElementById("timer").innerHTML = "";
          setTimeout(x)
        }, 6000);
      }
    } else { 
      document.getElementById("timer").innerHTML = "Time is running: " + timeleft;
    }
    timeleft -= 1;
  }, 1000);
</script>

<script>
  function resendClick() {
    fetch(`/resend?email=<%= emaile %>`)
    .then(res => res.json())
    .then(data => {
      document.getElementById('sendingMessage').innerHTML = data.message;
      function hideParagraph() {
        document.getElementById('sendingMessage').innerHTML = '';
      }
      setTimeout(hideParagraph, 3000);
      console.log(data.message);
    });
  }
</script>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    const inputs = document.querySelectorAll('.otp-input');
    inputs.forEach((input, index) => {
      input.addEventListener('keyup', (e) => {
        if (e.keyCode === 8 && input.value.length === 0 && index > 0) {
          inputs[index - 1].focus();
        } else if (input.value.length === 1 && index < inputs.length - 1) {
          inputs[index + 1].focus();
        }
      });
    });

    const form = document.getElementById('otp-form');
    form.addEventListener('submit', function(event) {
      event.preventDefault();
      const otp = Array.from(inputs).map(input => input.value).join('');
      console.log(otp);
      fetch(`/check-otp?otp=${otp}`)
        .then(res => res.json())
        .then(data => {
          if(data.message) {
            document.getElementById('sendingMessage').innerHTML = data.message;
            function hideParagraph() {
              document.getElementById('sendingMessage').innerHTML = '';
            }
            setTimeout(hideParagraph, 3000);
            console.log(data.message);
          } else if(data.success) {
            window.location.href = '/registration-success';
          }

        });
    });
  });
</script>
