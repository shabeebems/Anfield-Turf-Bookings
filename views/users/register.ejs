    <!-- Modernizer & jQuery JS -->
    <script>
        const form = document.getElementById('signupForm');
        const registerBtn = document.getElementById('registerBtn');
        const registerLoading = document.getElementById('registerLoading');

        form.addEventListener('submit', (event) => {
            event.preventDefault();

            // Show loading and hide register button
            registerBtn.style.display = 'none';
            registerLoading.style.display = 'block';

            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const mobile = document.getElementById('mobile').value;
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const conformPassword = document.getElementById('conformPassword').value;

            fetch(`/signup-check?name=${name}&&email=${email}&&mobile=${mobile}&&username=${username}&&password=${password}&&conformPassword=${conformPassword}`)
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/otpSend';
                    } else {
                        document.getElementById('sendingMessage').innerHTML = data.message;

                        // Show register button again
                        registerBtn.style.display = 'block';
                        registerLoading.style.display = 'none';

                        setTimeout(() => {
                            document.getElementById('sendingMessage').innerHTML = '';
                        }, 3000);
                    }
                })
                .catch(() => {
                    document.getElementById('sendingMessage').innerHTML = "Something went wrong. Try again.";

                    // Show register button again
                    registerBtn.style.display = 'block';
                    registerLoading.style.display = 'none';
                });
        });
    </script>


